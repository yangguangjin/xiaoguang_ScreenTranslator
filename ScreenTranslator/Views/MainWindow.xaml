<Window x:Class="ScreenTranslator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ScreenTranslator.ViewModels"
        Title="å°å…‰ç¿»è¯‘"
        Icon="/icon.ico"
        Width="800" Height="600"
        MinWidth="400" MinHeight="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="{Binding IsTopmost}"
        ResizeMode="CanResize">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="6"
                      GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border Background="{DynamicResource BackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

                <Image x:Name="BackgroundImage" Grid.RowSpan="3"
                       Stretch="UniformToFill" Opacity="0.15"
                       Visibility="Collapsed" IsHitTestVisible="False"/>

                <!-- Title Bar -->
                <Border Grid.Row="0"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                            <Setter Property="CornerRadius" Value="8,8,0,0"/>
                            <Setter Property="Height" Value="40"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsClickThrough}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Menu Button -->
                        <Button x:Name="MenuButton" Grid.Column="0"
                                Content="â˜°" Style="{StaticResource ToolbarButton}"
                                Margin="8,4,4,4" FontSize="16"
                                Click="MenuButton_Click" ToolTip="èœå•"/>

                        <!-- App Name -->
                        <TextBlock Grid.Column="1"
                                   Text="AIæˆªå›¾"
                                   Foreground="{DynamicResource PrimaryBrush}"
                                   VerticalAlignment="Center"
                                   FontSize="12" FontWeight="Bold"
                                   Margin="4,0"/>

                        <!-- Error indicator -->
                        <TextBlock Grid.Column="2" Text="!"  FontWeight="Bold"
                                Foreground="{DynamicResource AccentRedBrush}"
                                FontSize="12" Padding="4,0"
                                VerticalAlignment="Center"
                                Visibility="{Binding HasError, Converter={StaticResource BoolToVisConverter}}"
                                ToolTip="å­˜åœ¨é”™è¯¯ï¼ŒæŸ¥çœ‹æ—¥å¿—é¢æ¿"/>

                        <!-- Status Text -->
                        <TextBlock Grid.Column="3"
                                   Text="{Binding StatusText}"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"
                                   FontSize="11"/>

                        <!-- Language Pair -->
                        <TextBlock Grid.Column="4"
                                   Text="{Binding CurrentLanguagePair}"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   FontSize="11" Margin="4,0"
                                   VerticalAlignment="Center"/>

                        <!-- Elapsed Time -->
                        <TextBlock Grid.Column="5"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   FontSize="11" Margin="4,0"
                                   VerticalAlignment="Center">
                            <Run Text="{Binding ElapsedMs, Mode=OneWay}"/><Run Text="ms"/>
                        </TextBlock>

                        <!-- Minimize -->
                        <Button Grid.Column="6" Content="â”€" Style="{StaticResource ToolbarButton}"
                                Margin="0,4,4,4"
                                Click="MinimizeBtn_Click"/>

                        <!-- Close -->
                        <Button Grid.Column="7" Content="âœ•" Style="{StaticResource ToolbarButton}"
                                Margin="0,4,4,4"
                                Click="CloseBtn_Click"/>
                    </Grid>
                </Border>

                <!-- Toolbar Popup -->
                <Popup PlacementTarget="{Binding ElementName=MenuButton}"
                       Placement="Bottom"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       IsOpen="{Binding IsToolbarPopupOpen, Mode=TwoWay}">
                    <Border Background="{DynamicResource SurfaceBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1" CornerRadius="6"
                            Padding="8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.4"/>
                        </Border.Effect>
                        <StackPanel>
                            <!-- Toggle Buttons -->
                            <WrapPanel Margin="0,4,0,0">
                                <ToggleButton Content="ðŸ“Œ ç½®é¡¶" Style="{StaticResource ToolbarToggle}"
                                              Margin="0,2,4,2" FontSize="12" Padding="8,4"
                                              IsChecked="{Binding IsTopmost}"/>
                                <ToggleButton Content="ðŸ‘† ç©¿é€" Style="{StaticResource ToolbarToggle}"
                                              Margin="0,2,4,2" FontSize="12" Padding="8,4"
                                              IsChecked="{Binding IsClickThrough}"
                                              Click="ClickThrough_Click"/>
                                <ToggleButton Content="åŽŸæ–‡" Style="{StaticResource ToolbarToggle}"
                                              Margin="0,2,4,2" FontSize="12" Padding="8,4"
                                              IsChecked="{Binding ShowOriginalText}"/>
                                <Button Content="âš™ è®¾ç½®" Style="{StaticResource ToolbarButton}"
                                        Margin="0,2,4,2" FontSize="12" Padding="8,4"
                                        Click="SettingsBtn_Click"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                </Popup>

                <!-- Content: Dual Pane -->
                <Grid Grid.Row="1" Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="OriginalColumn" Width="*"/>
                        <ColumnDefinition x:Name="SplitterColumn" Width="5"/>
                        <ColumnDefinition x:Name="TranslatedColumn" Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Original Text -->
                    <Border x:Name="OriginalTextBorder" Grid.Column="0" Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="4" Padding="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="åŽŸæ–‡" Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontSize="11" Margin="0,0,0,4"/>
                            <TextBox Grid.Row="1"
                                     Text="{Binding OriginalText, Mode=OneWay}"
                                     FontSize="{Binding FontSize}"
                                     Foreground="{DynamicResource TextBrush}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     AcceptsReturn="True"/>
                        </Grid>
                    </Border>

                    <GridSplitter x:Name="ColumnSplitter" Grid.Column="1"
                                  Width="5"
                                  HorizontalAlignment="Stretch"
                                  Background="Transparent"/>

                    <!-- Translated Text -->
                    <Border Grid.Column="2" CornerRadius="4" Padding="8"
                            Background="{DynamicResource SurfaceBrush}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="è¯‘æ–‡" Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontSize="11" Margin="0,0,0,4"/>
                            <TextBox Grid.Row="1"
                                     Text="{Binding TranslatedText, Mode=OneWay}"
                                     FontSize="{Binding FontSize}"
                                     Foreground="{DynamicResource TextBrush}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     AcceptsReturn="True"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Log Panel -->
                <Border Grid.Row="2" Background="#1A1A2E"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,1,0,0" Padding="8,4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto" MaxHeight="130"/>
                        </Grid.RowDefinitions>
                        <!-- Header: always visible, outside scroll area -->
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="â–¾" FontSize="10" Padding="4,0"
                                        Style="{StaticResource ToolbarButton}"
                                        Click="ToggleLogPanel_Click"
                                        x:Name="LogToggleButton"
                                        ToolTip="å±•å¼€/æ”¶èµ·æ—¥å¿—"/>
                                <TextBlock Text="æ—¥å¿—" Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="11" FontWeight="Bold" VerticalAlignment="Center"
                                           Margin="4,0,0,0"/>
                            </StackPanel>
                            <Button Content="æ¸…é™¤" HorizontalAlignment="Right"
                                    Style="{StaticResource ToolbarButton}"
                                    Padding="6,2" FontSize="10"
                                    Click="ClearApiLog_Click"/>
                        </Grid>
                        <!-- Collapsible content -->
                        <ScrollViewer x:Name="LogContentPanel" Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Auto"
                                      Margin="0,2,0,0">
                            <StackPanel>
                                <!-- Error Detail -->
                                <TextBox Text="{Binding ErrorDetail, Mode=OneWay}"
                                         Foreground="#FF6B6B" Background="Transparent"
                                         BorderThickness="0" IsReadOnly="True"
                                         TextWrapping="Wrap" FontSize="11" FontFamily="Consolas"
                                         Margin="0,0,0,2"
                                         Visibility="{Binding HasError, Converter={StaticResource BoolToVisConverter}}"/>
                                <!-- Log entries -->
                                <TextBox Text="{Binding ApiLog, Mode=OneWay}"
                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                         Background="Transparent"
                                         BorderThickness="0" IsReadOnly="True"
                                         TextWrapping="NoWrap" FontSize="11" FontFamily="Consolas"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Loading overlay -->
                <Border Grid.Row="1" Background="#80000000" CornerRadius="4"
                        Visibility="{Binding IsTranslating, Converter={StaticResource BoolToVisConverter}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200" Height="4"
                                     Foreground="{DynamicResource PrimaryBrush}"/>
                        <TextBlock Text="ç¿»è¯‘ä¸­..." Foreground="{DynamicResource TextBrush}"
                                   HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
        </Grid>
    </Border>
</Window>

<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ScreenTranslator.Desktop.App"
             RequestedThemeVariant="Dark">
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://ScreenTranslator.Desktop/Resources/AppStyles.axaml" />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://ScreenTranslator.Desktop/Resources/DarkTheme.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="avares://ScreenTranslator.Desktop/icon.ico"
                      ToolTipText="小光翻译"
                      Command="{Binding ShowWindowCommand}" />
        </TrayIcons>
    </TrayIcon.Icons>
</Application>
